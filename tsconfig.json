{
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2018",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "typings/**/*"
    ]
}
